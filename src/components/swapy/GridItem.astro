---
import { twMerge } from "tailwind-merge";
type Props = {
  name: string;
  className?: string;
};
const { name, className } = Astro.props;
---

<div
  class={twMerge(
    "border-4 border-pink-300 h-full bg-pink-100 text-pink-800 rounded-2xl px-4 py-2",
    className
  )}
  data-swapy-item={name}
>
  <slot />
</div>
